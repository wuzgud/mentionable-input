<MentionableInput
        @value={{this.newCommentText}}
        @options={{this.userMentions}}
        @mentionKey="username"
        @onInputChange={{fn this.commentChanged}}
        @onMentionStarted={{perform this.searchUsersToMention}} as |mentionInput|>
  <mentionInput.mentionOptions as |options|>
    <options.option

            @displayKey={{"name"}} />
  </mentionInput.mentionOptions>
</MentionableInput>
{{outlet}}